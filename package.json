{
  "name": "20forms-20designs",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "generate": "node scripts/generate-mini-apps.mjs",
    "dev:shell": "npm run dev --workspace=@forms-comparison/shell",
    "build": "node scripts/build-all.mjs",
    "build:shell": "npm run build --workspace=@forms-comparison/shell",
    "build:copy": "node scripts/copy-builds-to-dist.mjs",
    "preview": "node scripts/serve-preview.mjs",
    "preview:shell": "npm run preview --workspace=@forms-comparison/shell",
    "clean": "node scripts/clean.mjs",
    "optimize-configs": "node scripts/optimize-vite-configs.mjs",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.0"
  },
  "overrides": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
