{
  "name": "20forms-20designs",
  "private": true,
  "version": "1.0.251129.32",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "generate": "node scripts/generate-mini-apps.mjs",
    "dev:shell": "npm run dev --workspace=@forms-comparison/shell",
    "build": "node scripts/build-all.mjs",
    "build:shell": "npm run build --workspace=@forms-comparison/shell",
    "build:copy": "node scripts/copy-builds-to-dist.mjs",
    "preview": "node scripts/serve-preview.mjs",
    "preview:shell": "npm run preview --workspace=@forms-comparison/shell",
    "clean": "node scripts/clean.mjs",
    "optimize-configs": "node scripts/optimize-vite-configs.mjs",
    "lint": "eslint 'apps/*/src/**/*.{js,jsx,ts,tsx}' 'packages/*/src/**/*.{js,jsx,ts,tsx}' --cache",
    "lint:shell": "eslint apps/shell/src --cache",
    "lint:mui": "eslint 'apps/mui-*/src/**/*.{js,jsx}' --cache",
    "lint:react-bootstrap": "eslint 'apps/react-bootstrap-*/src/**/*.{js,jsx}' --cache",
    "lint:evergreen": "eslint 'apps/evergreen-*/src/**/*.{js,jsx}' --cache",
    "lint:blueprint": "eslint 'apps/blueprint-*/src/**/*.{js,jsx}' --cache",
    "lint:radix-ui": "eslint 'apps/radix-ui-*/src/**/*.{js,jsx}' --cache",
    "lint:gravity-ui": "eslint 'apps/gravity-ui-*/src/**/*.{js,jsx}' --cache",
    "lint:react-no-css": "eslint 'apps/react-no-css-*/src/**/*.{js,jsx}' --cache",
    "lint:cloudscape": "eslint 'apps/cloudscape-*/src/**/*.{js,jsx}' --cache",
    "lint:daisyui": "eslint 'apps/daisyui-*/src/**/*.{js,jsx}' --cache",
    "lint:shadcn-ui": "eslint 'apps/shadcn-ui-*/src/**/*.{js,jsx}' --cache",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "overrides": {
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
